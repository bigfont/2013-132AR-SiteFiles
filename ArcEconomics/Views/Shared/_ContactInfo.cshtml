@model ArcEconomics.Models.ContactInfo

    <address>
        <input required type="text" value="@Model.CompanyName" placeholder="CompanyName" id="CompanyName" />
        <input required type="text" value="@Model.Street" placeholder="Street" id="Street" />
        <input required type="text" value="@Model.City" placeholder="City" id="City" />
        <input required type="text" value="@Model.Province" placeholder="Province" id="Province" />        
        <input required type="text" value="@Model.Country" placeholder="Country" id="Country" />
        <input required type="text" value="@Model.PostalCode" placeholder="PostalCode" id="PostalCode" />
        <input required type="text" value="@Model.Phone" placeholder="Phone" id="Phone" />
        <input required type="text" value="@Model.Fax" placeholder="Fax" id="Fax" />
    </address>

    <address>
        <input required type="text" value="@Model.FirstName" placeholder="FirstName" id="FirstName" />
        <input required type="text" value="@Model.LastName" placeholder="LastName" id="LastName" />
        <input required type="email" value="@Model.Email" placeholder="Email" id="Email" />
    </address>
       