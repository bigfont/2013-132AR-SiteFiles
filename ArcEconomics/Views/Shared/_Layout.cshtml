@model ArcEconomics.ViewModels.ViewModelBase
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>ARC Economics</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    @Styles.Render("~/Content/themes/bootstrap/css")
    @Styles.Render("~/Content/css")

</head>
<body>

    <header>

        @Html.Partial("_Navbar", @Model)

    </header>

    <div class="container">

        <article>

            <div class="row">               

                <section class="col-lg-12">

                    <h1>@Model.SiteNavigation.CurrentPage.LinkText</h1>

                    @RenderBody()

                </section>

            </div>

            <div class="row">

                <footer class="col-lg-12">

                    @Html.Partial("_Footer", Model.SiteNavigation)

                </footer>

            </div>

        </article>

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)

    @if (WebSecurity.IsAuthenticated)
    {
        <script src="~/ckeditor/ckeditor.js"></script>
        <script src="~/Scripts/site.editor.js"></script>
    }



</body>
</html>
